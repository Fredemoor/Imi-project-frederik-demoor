<button class="btn btn-primary" @onclick="OnAdd">Add Dog</button>
<table class="table mt-3">
    <thead>
        <tr>

            <th>Id</th>
            <th>Name</th>        
            <th>Gender</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>             
                <td>@item.Gender</td>      
                <td>
                    <button class="btn btn-outline-danger"
                        @onclick="e => OnDelete.InvokeAsync(item)">
                        <i class="oi oi-delete"></i>
                    </button>
                </td>
                      <td>
                    <button class="btn btn-outline-info"
                        @onclick="e => OnEdit.InvokeAsync(item)">
                            <i class="oi oi-pencil"></i>
                        </button>
                    </td>
            </tr>
        }
    </tbody>
</table>


@code {
    [Parameter]
    public Animal[] Items { get; set; }
    [Parameter]
    public EventCallback OnAdd { get; set; }
    [Parameter]
    public EventCallback<Animal> OnEdit { get; set; }
    [Parameter]
    public EventCallback<Animal> OnDelete { get; set; }
}
