.<EditForm Model="@Location" OnValidSubmit="@(e => OnSave.InvokeAsync(Location))">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="name">Name: </label>
        <InputText id="name" class="form-control"
                   @bind-Value="Location.Name" />
        <ValidationMessage For="@(() => Location.Name)" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-warning" @onclick="OnCancel">Cancel</button>
</EditForm>

@code {
    [Parameter]
    public Location Location { get; set; }
    [Parameter]
    public EventCallback<Location> OnSave { get; set; }
    [Parameter]
    public EventCallback OnCancel { get; set; }
}
